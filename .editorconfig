# This is our universal EditorConfig file
# To use this .editorconfig file, you need to copy and paste it into your own project's root directory.
#
# EditorConfig helps maintain consistent coding styles between different editors and IDEs.
# For more information about EditorConfig, please visit http://editorconfig.org
#
# -----------------------------------------------------------------------------------------------------

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C++ source files
[*.{cpp,cxx,cc,c,hpp,hxx,h}]
indent_style = tab
indent_size = 8
tab_width = 8
max_line_length = 120

# CMake files
[CMakeLists.txt,*.cmake]
indent_style = tab
indent_size = 8
tab_width = 8

# JSON files (for compile_commands.json, package.json, etc.)
[*.json]
indent_style = space
indent_size = 2

# YAML files (for CI/CD, docker-compose, etc.)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Shell scripts
[*.{sh,bash}]
indent_style = tab
indent_size = 8
tab_width = 8

# Makefiles
[{Makefile,*.mk,*.mak}]
indent_style = tab
indent_size = 8
tab_width = 8

# XML files (for project files, manifests)
[*.xml]
indent_style = space
indent_size = 2

# Python files (for build scripts)
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 4

# Git files
[.gitignore,.gitattributes]
indent_style = space
indent_size = 2

# Visual Studio files
[*.{vcxproj,vcxproj.filters,sln}]
indent_style = tab
indent_size = 8
tab_width = 8
end_of_line = crlf

# Clang format file
[.clang-format]
indent_style = space
indent_size = 2
